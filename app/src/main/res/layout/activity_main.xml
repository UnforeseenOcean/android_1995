<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222">

    <fi.harism.android.intro.view.GlTextureView
        android:id="@+id/gltextureview_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/layout_credits"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="bottom|right"
        android:background="#0000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_pointer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#0000"
            android:padding="15dp"
            android:src="@drawable/img_pointer" />

        <Button
            android:id="@+id/button_link"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:background="#0000"
            android:text="@string/get_the_music"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/button_begin"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_button"
        android:text="@string/enter"
        android:textColor="#FFF"
        android:textSize="16sp" />

</FrameLayout>
